@model Proyect.Models.Mueble

@{
    ViewData["Title"] = "Crear Mueble";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Crear Nuevo Mueble</h1>

<div class="create-container">
    <div class="card">
        <div class="card-header text-white bg-primary">
            <h4>Detalles del Mueble</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre -->
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del mueble" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Tipo de Mueble -->
                <div class="form-group">
                    <label asp-for="IdTipoMueble" class="control-label">Tipo de Mueble</label>
                    <select asp-for="IdTipoMueble" class="form-control" asp-items="ViewBag.IdTipoMueble">
                        <option value="">Seleccione el tipo de mueble</option>
                    </select>
                </div>

                <!-- Cantidad -->
                <div class="form-group">
                    <label asp-for="Cantidad" class="control-label"></label>
                    <input asp-for="Cantidad" class="form-control" placeholder="Cantidad disponible" />
                    <span asp-validation-for="Cantidad" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del mueble" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Crear Mueble" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
