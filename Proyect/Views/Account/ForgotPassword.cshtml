@model Proyect.ViewModel.LoginViewModel

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="password-recovery-container d-flex justify-content-center align-items-center">
    <div class="password-recovery-card shadow-lg border-0 p-4">
        <div class="text-center mb-4">
            <img src="~/img/logo.png" alt="Logo" class="img-fluid rounded-circle mb-3" style="max-width: 80px; height: 80px;" />
            <h2 class="text-primary fw-bold password-recovery-title">@ViewData["Title"]</h2>
        </div>
        <p class="text-center text-muted mb-4 password-recovery-description">Ingrese su correo electrónico para recibir un enlace de restablecimiento de contraseña.</p>
        <form asp-action="ForgotPassword" method="post">
            <!-- Correo Electrónico -->
            <div class="mb-3">
                <label for="email" class="form-label text-muted password-recovery-label">Correo Electrónico</label>
                <input type="email" name="email" class="form-control password-recovery-input" required placeholder="example@domain.com" />
            </div>
            <!-- Botones -->
            <div class="d-flex flex-column align-items-center gap-2">
                <button type="submit" class="btn password-recovery-btn rounded-pill px-4 py-2 fw-bold" style="width: 150px;">Enviar</button>
                <a class="btn password-recovery-back-btn btn-outline-secondary rounded-pill px-4" asp-controller="Account" asp-action="Login" style="width: 150px;">Volver</a>
            </div>
        </form>
        <!-- Mensaje de éxito -->
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center mt-3 password-recovery-success-message rounded-pill">
                @ViewBag.Message
            </div>
        }
    </div>
</div>
