@model Proyect.ViewModel.LoginViewModel

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Recuperar Contraseña";
}

<div class="login-container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card shadow-lg border-0 p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <img src="~/img/logo.png" alt="Logo" class="img-fluid rounded-circle mb-3" style="max-width: 80px; height: 80px;" />
            <h2 class="text-primary fw-bold">@ViewData["Title"]</h2>
        </div>
        <p class="text-center text-muted mb-4">Ingrese su correo electrónico para recibir un enlace de restablecimiento de contraseña.</p>
        <form asp-action="ForgotPassword" method="post">
            <!-- Correo Electrónico -->
            <div class="mb-3">
                <label for="email" class="form-label text-muted">Correo Electrónico</label>
                <input type="email" name="email" class="form-control rounded-pill" required placeholder="example@domain.com" />
            </div>
            <!-- Botones -->
            <div class="d-flex flex-column align-items-center gap-2">
                <button type="submit" class="btn btn-gradient rounded-pill px-4 py-2 fw-bold" style="width: 150px;">Enviar</button>
                <a class="btn btn-outline-secondary rounded-pill px-4" asp-controller="Account" asp-action="Login" style="width: 150px;">Volver</a>
            </div>
        </form>
        <!-- Mensaje de éxito -->
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center mt-3 rounded-pill">
                @ViewBag.Message
            </div>
        }
    </div>
</div>
