@model Proyect.ViewModel.ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="login-container d-flex justify-content-center align-items-center vh-100">
    <div class="login-card shadow-lg border-0 p-4" style="max-width: 400px; width: 100%;">
        <div class="text-center mb-4">
            <img src="~/img/logo.png" alt="Logo" class="img-fluid rounded-circle mb-3" style="max-width: 80px; height: 80px;" />
            <h2 class="text-primary fw-bold">@ViewData["Title"]</h2>
        </div>
        <p class="text-center text-muted mb-4">Por favor, ingrese su nueva contraseña.</p>
        <form asp-action="ResetPassword" method="post">
            <input type="hidden" asp-for="Code" />
            <!-- Nueva Contraseña -->
            <div class="mb-3">
                <label asp-for="Password" class="form-label text-muted">Nueva Contraseña</label>
                <input asp-for="Password" class="form-control rounded-pill" type="password" required placeholder="Nueva Contraseña" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <!-- Confirmar Contraseña -->
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label text-muted">Confirmar Contraseña</label>
                <input asp-for="ConfirmPassword" class="form-control rounded-pill" type="password" required placeholder="Confirmar Contraseña" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <!-- Botones -->
            <div class="d-flex flex-column align-items-center gap-2">
                <button type="submit" class="btn btn-gradient rounded-pill px-4 py-2 fw-bold" style="width: 150px;">Restablecer</button>
                <a class="btn btn-outline-secondary rounded-pill px-4" asp-controller="Account" asp-action="Login" style="width: 150px;">Volver</a>
            </div>
        </form>
        <!-- Mensaje de éxito -->
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-success text-center mt-3 rounded-pill">
                @ViewBag.Message
            </div>
        }
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
