@model Proyect.ViewModel.ResetPasswordViewModel

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="reset-password-container d-flex justify-content-center align-items-center vh-100">
    <div class="card reset-password-card shadow-lg p-4">
        <div class="card-body">
            <h2 class="text-center mb-4 reset-password-title">@ViewData["Title"]</h2>
            <form asp-action="ResetPassword" method="post">
                <input type="hidden" asp-for="Code" />

                <div class="mb-3">
                    <label asp-for="Password" class="form-label reset-password-label">Nueva Contraseña</label>
                    <input asp-for="Password" class="form-control reset-password-input" type="password" placeholder="Nueva Contraseña" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label reset-password-label">Confirmar Contraseña</label>
                    <input asp-for="ConfirmPassword" class="form-control reset-password-input" type="password" placeholder="Confirmar Contraseña" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-center d-grid gap-2 mb-2">
                    <button type="submit" class="btn btn-primary reset-password-btn">Restablecer Contraseña</button>
                </div>
                <div class="text-center gap-3">
                    <a class="btn btn-secondary reset-password-back-btn" asp-controller="Account" asp-action="Login">Volver</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
