@model Proyect.ViewModel.LoginViewModel

@{
    Layout = "~/Views/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Inicio de Sesión";
}

<div class="d-flex justify-content-center align-items-center vh-80 ">
    <div class="card shadow " style="max-width: 400px; width: 100%; ">
        <div class="card-body">
			<h1 class="text-center mb-5">
                <img src="~/img/logo.png" alt="Logo" class="img-fluid rounded-circle" style="max-width: 100px; height: 100px; object-fit: cover;" />
            </h1>
            <h2 class="text-center mb-4">@ViewData["Title"]</h2>
            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }
            <form asp-action="Login" method="post">
                @* Mostrar errores globales del ModelState *@
                @if (!ViewData.ModelState.IsValid && ViewData.ModelState[""]?.Errors.Count > 0)
                {
                    <div class="alert alert-danger">
                        @ViewData.ModelState[""]?.Errors[0].ErrorMessage
                    </div>
                }
                <div class="mb-3">
                    <label asp-for="CorreoElectronico" class="form-label"></label>
                    <input asp-for="CorreoElectronico" class="form-control" placeholder="Correo Electrónico" />
                    <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Contraseña" class="form-label"></label>
                    <input asp-for="Contraseña" class="form-control" type="password" placeholder="Contraseña" />
                    <span asp-validation-for="Contraseña" class="text-danger"></span>
                </div>
                <div class="d-flex justify-content-center d-grid gap-2">
                    <button type="submit" class="btn btn-primary" style="width: 150px;">Iniciar Sesión</button>
                </div>
                <div class="text-center mt-3">
                    <a asp-controller="Account" asp-action="ForgotPassword" class="text-decoration-none">¿Olvidaste tu contraseña?</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
