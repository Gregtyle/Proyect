@model Proyect.Models.Paquete

@{
    ViewData["Title"] = "Detalles del Paquete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Detalles del Paquete</h1>

<div class="details-container">
    <div class="card">
        <div class="card-header">
            <h4>Información del Paquete</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Nombre del Paquete</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.IdPaquete" class="btn btn-primary btn-sm">Editar</a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>

<div class="mt-4">
    <h4>Servicios y Habitaciones incluidos</h4>

    <h5>Servicios</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre del Servicio</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var servicio in Model.PaquetesServicios)
            {
                <tr>
                    <td>@servicio.IdServicioNavigation.Nombre</td>
                    <td>@servicio.IdServicioNavigation.Precio</td>
                </tr>
            }
        </tbody>
    </table>

    <h5>Habitaciones</h5>
    <table class="table">
        <thead>
            <tr>
                <th>Nombre de la Habitación</th>
                <th>Precio</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var habitacion in Model.PaquetesHabitaciones)
            {
                <tr>
                    <td>@habitacion.IdHabitacionNavigation.Nombre</td>
                    <td>@habitacion.IdHabitacionNavigation.Precio</td>
                </tr>
            }
        </tbody>
    </table>
</div>

