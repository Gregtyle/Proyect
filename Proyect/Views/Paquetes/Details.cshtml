@model Proyect.Models.Paquete

@{
    ViewData["Title"] = "Detalles del Paquete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="Tituloscentro">Detalles del Paquete</h1>

    <!-- Informaci贸n del Paquete -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Informaci贸n del Paquete</h6>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 font-weight-bold">Nombre del Paquete</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 font-weight-bold">Descripci贸n</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Descripcion)</dd>

                <dt class="col-sm-3 font-weight-bold">Precio</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Precio)</dd>

                <dt class="col-sm-3 font-weight-bold">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>
            </dl>
        </div>
    </div>

    <!-- Servicios incluidos -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Servicios Incluidos</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nombre del Servicio</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var servicio in Model.PaquetesServicios)
                    {
                        <tr>
                            <td>@servicio.IdServicioNavigation.Nombre</td>
                            <td>@servicio.IdServicioNavigation.Precio</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Habitaciones incluidas -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Habitaciones Incluidas</h6>
        </div>
        <div class="card-body">
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Nombre de la Habitaci贸n</th>
                        <th>Precio</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var habitacion in Model.PaquetesHabitaciones)
                    {
                        <tr>
                            <td>@habitacion.IdHabitacionNavigation.Nombre</td>
                            <td>@habitacion.IdHabitacionNavigation.Precio</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdPaquete" class="btn ov-btn-slide-left btn-sm">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn ov-btn-slide-left-gray btn-sm">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>
