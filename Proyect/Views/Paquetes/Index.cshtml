@model IEnumerable<Proyect.Models.Paquete>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="Tituloscentro">Paquetes</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-custom"><i class="bi bi-plus-square"></i> Crear</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<table class="table" id="PaquetesTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Precio)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.Precio)</td>
                <td>
                    <label class="switch">
                        <input type="checkbox" class="status-toggle" data-id="@item.IdPaquete" @(item.Estado ? "checked" : "")>
                        <span class="slider"></span>
                    </label>
                </td>
                <td class="action-icons">
                    <a asp-action="Edit" asp-route-id="@item.IdPaquete" class="btn btn-icon" data-toggle="tooltip" title="Editar"><i class="bi bi-pencil-square"></i> </a> |
                    <a asp-action="Details" asp-route-id="@item.IdPaquete" class="btn btn-icon" data-toggle="tooltip" title="Detalles"><i class="bi bi-info-lg"></i> </a> |
                    <a asp-action="Delete" asp-route-id="@item.IdPaquete" class="btn btn-icon" data-toggle="tooltip" title="Eliminar"><i class="bi bi-trash3"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#PaquetesTable').DataTable({
                language: {
                    "sLengthMenu": "Mostrar _MENU_ entradas",
                    "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "sSearch": "Buscar:",
                            "emptyTable": "NO HAY NINGUN ELEMENTO EN LA TABLA"
                }
            });
        })
    </script>

    <script>
        $(document).ready(function () {
            $('.status-toggle').change(function () {
                const estado = $(this).is(':checked') ? true : false;
                const idPaquete = $(this).data('id');

                // Realizar llamada AJAX para actualizar el estado
                $.ajax({
                    url: '/Paquetes/ActualizarEstado', // Cambia la URL si es necesario
                    type: 'POST',
                    data: {
                        id: idPaquete,
                        estado: estado
                    },
                    success: function (response) {
                        console.log('Estado actualizado con éxito:', response);
                    },
                    error: function (xhr, status, error) {
                        console.error('Error al actualizar el estado:', error);
                    }
                });
            });
        });
    </script>
}
