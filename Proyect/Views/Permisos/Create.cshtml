@model Proyect.Models.Permiso

@{
    ViewData["Title"] = "Crear Permiso";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Crear Nuevo Permiso</h1>

<div class="create-container">
    <div class="card">
        <div class="card-header text-white bg-primary">
            <h4>Nuevo Permiso</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre del Permiso -->
                <div class="form-group">
                    <label asp-for="NombrePermiso" class="control-label">Nombre del Permiso</label>
                    <input asp-for="NombrePermiso" class="form-control" placeholder="Ingrese el nombre del permiso" />
                    <span asp-validation-for="NombrePermiso" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del permiso" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

   
                <div class="form-group text-center">
                    <input type="submit" value="Crear Permiso" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
