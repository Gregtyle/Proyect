@model IEnumerable<Proyect.Models.Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Permisos</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-custom"><i class="bi bi-plus-square"></i> Crear</a>
</p>
<table class="table table-striped table-hover" id="PermisosTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NombrePermiso)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombrePermiso)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td class="action-icons">
                    <a asp-action="Edit" asp-route-id="@item.IdPermiso" class="btn btn-icon" data-toggle="tooltip" title="Editar"><i class="bi bi-pencil-square"></i> </a> |
                    <a asp-action="Details" asp-route-id="@item.IdPermiso" class="btn btn-icon" data-toggle="tooltip" title="Detalles"><i class="bi bi-info-lg"></i> </a> |
                    <a asp-action="Delete" asp-route-id="@item.IdPermiso" class="btn btn-icon" data-toggle="tooltip" title="Eliminar"><i class="bi bi-trash3"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {

     <script>

        $(document).ready(function () {
            $('#PermisosTable').DataTable({
                language: {
                    "sLengthMenu": "Mostrar _MENU_ entradas",
                    "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "sSearch": "Buscar:",
                    "emptyTable": "NO HAY NINGUN ELEMENTO EN LA TABLA"
                }
            });
        })
    </script>
}
