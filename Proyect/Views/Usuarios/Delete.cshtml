@model Proyect.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}
<div class="delete-container">
    <h1 class="Tituloscentro">Eliminar Usuario</h1>
    <div class="card shadow mb-4">
        <div class="card-header text-white bg-danger">
            <h6 class="m-0 font-weight-bold text-white">Información del Usuario</h6>
        </div>
        <div class="card-body">
            <h5>¿Estás seguro de que deseas eliminar este usuario?</h5>
            <p><strong>Nota:</strong> Esta acción no puede deshacerse.</p>

            <dl class="row">
                <!-- Tipo de Documento -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.TipoDocumento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.TipoDocumento)
                </dd>

                <!-- Documento -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Documento)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Documento)
                </dd>

                <!-- Nombre -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <!-- Apellido -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Apellido)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Apellido)
                </dd>

                <!-- Celular -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Celular)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Celular)
                </dd>

                <!-- Dirección -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Direccion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Direccion)
                </dd>

                <!-- Correo Electrónico -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.CorreoElectronico)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CorreoElectronico)
                </dd>

                <!-- Contraseña -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Contraseña)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Contraseña)
                </dd>

                <!-- Estado -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Estado)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>

                <!-- Fecha de Creación -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.FechaCreacion)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaCreacion)
                </dd>

                <!-- Rol -->
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.IdRolNavigation)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdRolNavigation.NombreRol)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-center">
            <form asp-action="Delete">
                <input type="hidden" asp-for="IdUsuario" />
                <button type="submit" class="btn ov-btn-slide-left-red btn-sm">
                    <i class="bi bi-trash-fill"></i>  Eliminar
                </button>
                <a asp-action="Index" class="btn ov-btn-slide-left-gray btn-sm">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </form>
        </div>

    </div>
</div>
