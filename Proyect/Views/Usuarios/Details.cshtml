@model Proyect.Models.Usuario

@{
    ViewData["Title"] = "Detalles del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="Tituloscentro">Detalles del Usuario</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Información del Usuario</h6>
        </div>
        <div class="card-body">
            <dl class="row ">
                <dt class="col-sm-3 font-weight-bold">Tipo de Documento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.TipoDocumento)</dd>

                <dt class="col-sm-3 font-weight-bold">Documento</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Documento)</dd>

                <dt class="col-sm-3 font-weight-bold">Nombre</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Nombre)</dd>

                <dt class="col-sm-3 font-weight-bold">Apellido</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Apellido)</dd>

                <dt class="col-sm-3 font-weight-bold">Celular</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Celular)</dd>

                <dt class="col-sm-3 font-weight-bold">Dirección</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>

                <dt class="col-sm-3 font-weight-bold">Correo Electrónico</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.CorreoElectronico)</dd>

                <dt class="col-sm-3 font-weight-bold">Contraseña</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Contraseña)</dd>

                <dt class="col-sm-3 font-weight-bold">Estado</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Estado)</dd>

                <dt class="col-sm-3 font-weight-bold">Fecha de Creación</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FechaCreacion)</dd>

                <dt class="col-sm-3 font-weight-bold">Rol</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.IdRolNavigation.NombreRol)</dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.IdUsuario" class="btn ov-btn-slide-left btn-sm">
                <i class="fas fa-edit"></i> Editar
            </a>
            <a asp-action="Index" class="btn ov-btn-slide-left-gray btn-sm">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>
