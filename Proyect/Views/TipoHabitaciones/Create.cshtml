@model Proyect.Models.TipoHabitacione

@{
    ViewData["Title"] = "Crear Tipo de Habitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Crear Nuevo Tipo de Habitación</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Detalles del Tipo de Habitación</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre -->
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Tipo de Habitación</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del tipo de habitación" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del tipo de habitación" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Capacidad -->
                <div class="form-group">
                    <label asp-for="Capacidad" class="control-label">Capacidad Máxima</label>
                    <input asp-for="Capacidad" class="form-control" placeholder="Capacidad máxima" />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>

                <!-- Botón para enviar el formulario -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg" /><i class="fas fa-bed"></i> Crear Tipo de Habitación
                    </button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
