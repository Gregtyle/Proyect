@model Proyect.Models.TipoHabitacione

@{
    ViewData["Title"] = "Crear Tipo de Habitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Crear Nuevo Tipo de Habitación</h1>

<div class="create-container">
    <div class="card">
        <div class="card-header text-white bg-primary">
            <h4>Detalles del Tipo de Habitación</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre -->
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label"></label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del tipo de habitación" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label"></label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del tipo de habitación" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Capacidad -->
                <div class="form-group">
                    <label asp-for="Capacidad" class="control-label"></label>
                    <input asp-for="Capacidad" class="form-control" placeholder="Capacidad máxima" />
                    <span asp-validation-for="Capacidad" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Crear Tipo Habitacion" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
