@model Proyect.Models.TipoMueble

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Crear Nuevo Tipo de Mueble</h1>

<div class="create-container">
    <div class="card">
        <div class="card-header text-white bg-primary">
            <h4>Nuevo Tipo de Mueble</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre del Tipo de Mueble -->
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Tipo de Mueble</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del tipo de mueble" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del tipo de mueble" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Botón de Enviar -->
                <div class="form-group text-center">
                    <input type="submit" value="Crear Tipo de Mueble" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
