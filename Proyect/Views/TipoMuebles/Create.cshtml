@model Proyect.Models.TipoMueble

@{
    ViewData["Title"] = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800">Crear Nuevo Tipo de Mueble</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Nuevo Tipo de Mueble</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre del Tipo de Mueble -->
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Tipo de Mueble</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del tipo de mueble" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Descripción -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Descripción del tipo de mueble" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Botón de Enviar -->
                <div class="form-group text-center">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-couch"></i> Crear Tipo de Mueble
                    </button>
                </div>
            </form>
        </div>

        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">
                <i class="fas fa-arrow-left"></i> Volver a la lista
            </a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
