@model Proyect.Models.Servicio

@{
    ViewData["Title"] = "Crear Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="Tituloscentro">Crear Nuevo Servicio</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Formulario para Crear Servicio</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre del Servicio -->
                <div class="form-group">
                    <label asp-for="Nombre" class="control-label">Nombre del Servicio</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre del servicio" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Descripción del Servicio -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción del Servicio</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción del servicio" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Precio del Servicio -->
                <div class="form-group">
                    <label asp-for="Precio" class="control-label">Precio del Servicio</label>
                    <input asp-for="Precio" class="form-control" placeholder="Ingrese el precio del servicio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn ov-btn-slide-left btn-sm">
                        <i class="fas fa-save"></i> Crear Servicio
                    </button>
                    <a asp-action="Index" class="btn ov-btn-slide-left-gray btn-sm ml-3">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                </div>
                
            </form>
        </div>


    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
