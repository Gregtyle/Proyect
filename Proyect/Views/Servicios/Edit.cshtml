@model Proyect.Models.Servicio

@{
    ViewData["Title"] = "Editar Servicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="Tituloscentro">Editar Servicio</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Modifica los detalles del servicio</h6>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Campo oculto para el Id del Servicio -->
                <input type="hidden" asp-for="IdServicio" />

                <!-- Nombre del Servicio -->
                <div class="form-group">
                    <label asp-for="Nombre" class="form-label">Nombre del Servicio</label>
                    <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del servicio" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>

                <!-- Estado del Servicio (Checkbox) -->
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Estado" />
                        @Html.DisplayNameFor(model => model.Estado)
                    </label>
                </div>

                <!-- Descripción del Servicio -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="form-label">Descripción</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ingresa una descripción para el servicio" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Precio del Servicio -->
                <div class="form-group">
                    <label asp-for="Precio" class="form-label">Precio</label>
                    <input asp-for="Precio" class="form-control" placeholder="Ingresa el precio del servicio" />
                    <span asp-validation-for="Precio" class="text-danger"></span>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn ov-btn-slide-left btn-sm">
                        <i class="fas fa-save"></i> Guardar Cambios
                    </button>
                    <a asp-action="Index" class="btn ov-btn-slide-left-gray btn-sm ml-3">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
        </div>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
