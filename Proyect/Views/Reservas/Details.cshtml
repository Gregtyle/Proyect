@model Proyect.Models.Reserva

@{
    ViewData["Title"] = "Detalles de la Reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Detalles de la Reserva</h1>

<div class="details-container">
    <div class="card">
        <div class="card-header">
            <h4>Información de la Reserva</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Fecha de Reserva</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaReserva)
                </dd>
                <dt class="col-sm-3">Fecha de Inicio</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaInicio)
                </dd>
                <dt class="col-sm-3">Fecha de Fin</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FechaFin)
                </dd>
                <dt class="col-sm-3">Subtotal</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Subtotal)
                </dd>
                <dt class="col-sm-3">IVA</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Iva)
                </dd>
                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Total)
                </dd>
                <dt class="col-sm-3">Descuento</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descuento)
                </dd>
                <dt class="col-sm-3">Número de Personas</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NoPersonas)
                </dd>
                <dt class="col-sm-3">Cliente</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdClienteNavigation.Apellido)
                </dd>
                <dt class="col-sm-3">Estado de la Reserva</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdEstadoReservaNavigation.Estados)
                </dd>
                <dt class="col-sm-3">Método de Pago</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdMetodoPagoNavigation.Nombre)
                </dd>
                <dt class="col-sm-3">Paquete</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdPaqueteNavigation.Nombre)
                </dd>
                <dt class="col-sm-3">Usuario</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdUsuarioNavigation.Apellido)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Edit" asp-route-id="@Model?.IdReserva" class="btn btn-primary btn-sm">Editar</a>
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>

