@model IEnumerable<Proyect.Models.Reserva>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Reservas</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-custom"><i class="bi bi-plus-square"></i> Crear</a>
</p>

<table class="table table-striped table-hover" id="ReservasTable">
    <thead>
        <tr>
            <th>Fecha de Reserva</th>
            <th>Fecha de Inicio</th>
            <th>Fecha del Fin</th>
            <th>Id del Cliente</th>
            <th>@Html.DisplayNameFor(model => model.Total)</th>
            <th>estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.FechaReserva)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaInicio)</td>
                <td>@Html.DisplayFor(modelItem => item.FechaFin)</td>
                <td>@Html.DisplayFor(modelItem => item.IdClienteNavigation.Documento)</td>
                <td>@Html.DisplayFor(modelItem => item.Total)</td>
                <td>@Html.DisplayFor(modelItem => item.IdEstadoReservaNavigation.Estados)</td>
                <td class="action-icons">
                    <a asp-action="Edit" asp-route-id="@item.IdReserva" class="btn btn-icon"><i class="bi bi-pencil-square"></i> </a> |
                    <a asp-action="Details" asp-route-id="@item.IdReserva" class="btn btn-icon"><i class="bi bi-list"></i> </a> |
                    <a asp-controller="Abonos" asp-action="Index" asp-route-idReserva="@item.IdReserva" class="btn btn-primary"><i class="bi bi-wallet2"></i> Abono</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#ReservasTable').DataTable({
                scrollX: true,
                language: {
                    "sLengthMenu": "Mostrar _MENU_ entradas",
                    "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "sSearch": "Buscar:",
                    "emptyTable":"NO HAY NINGUN ELEMENTO EN LA TABLA",
                    "sInfo":"Mostrando START a END de TOTALÂ entradas"
                }
            });
        })
    </script>
}