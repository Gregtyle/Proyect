@model Proyect.Models.Abono

@{
    ViewData["Title"] = "Detalles del Abono";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Detalles del Abono</h1>

<div>
    <h4>Abono</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaAbono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaAbono)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Valordeuda)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valordeuda)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pendiente)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pendiente)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ValorAbono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ValorAbono)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Porcentaje)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Porcentaje)
        </dd>

        <dt class="col-sm-2">
            Comprobante
        </dt>
        <dd class="col-sm-10">
            @if (Model.Comprobante != null)
            {
                    <img src="data:image/png;base64,@Convert.ToBase64String(Model.Comprobante)" alt="Comprobante" style="max-width: 300px; max-height: 300px;" />
            }
            else
            {
                    <span>No disponible</span>
            }
        </dd>

        <dt class="col-sm-2">
            Estado del Abono
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdEstadoAbonoNavigation.Nombre)
        </dd>

        <dt class="col-sm-2">
            Reserva Asociada
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IdReservaNavigation.IdReserva)
        </dd>
    </dl>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>
