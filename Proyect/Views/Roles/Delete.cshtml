@model Proyect.Models.Role

@{
    ViewData["Title"] = "Eliminar Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Eliminar Rol</h1>

<div class="delete-container">
    <div class="card">
        <div class="card-header text-white bg-danger">
            <h4>Confirmación de Eliminación</h4>
        </div>
        <div class="card-body">
            <h3>¿Está seguro de que desea eliminar este rol?</h3>
            <dl class="row">
                <dt class="col-sm-3">Nombre del Rol</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.NombreRol)
                </dd>
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdRol" />
                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
            </form>
        </div>
    </div>
</div>

