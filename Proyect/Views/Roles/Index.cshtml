@model IEnumerable<Proyect.Models.Role>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gestión de Roles</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-custom"><i class="bi bi-plus-square"></i>Crear </a>
</p>

<!-- Mostrar mensajes de error o éxito -->
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<table class="table table-striped table-bordered" id="RolesTable">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.NombreRol)</th>
            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.Estado)</th> <!-- Nueva columna para el estado -->
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreRol)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>
                    <!-- Aquí usamos un botón que cambia el estado -->
                    <button class="btn @((item.Estado) ? "btn-success" : "btn-secondary") btn-sm changeState"
                            data-id="@item.IdRol" data-estado="@item.Estado">
                        @(item.Estado ? "Activo" : "Inactivo")
                    </button>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdRol" class="btn btn-primary btn-sm">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.IdRol" class="btn btn-info btn-sm">Detalles</a>
                    <button class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#deleteModal"
                            data-id="@item.IdRol" data-name="@item.NombreRol">
                        Eliminar
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal de eliminación -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmar eliminación</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>¿Está seguro de que desea eliminar el rol <strong id="roleName"></strong>?</p>
                <p class="text-danger">Esta acción no se puede deshacer.</p>
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
        <script>
            $(document).ready(function () {
                $('#RolesTable').DataTable({
                    scrollX: true,
                    language: {
                        "sLengthMenu": "Mostrar _MENU_ entradas",
                        "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                        "sSearch": "Buscar:",
                        "emptyTable":"NO HAY NINGUN ELEMENTO EN LA TABLA",
                        "sInfo":"Mostrando START a END de TOTAL entradas"
                    }
                });
            })
        </script>
    <script>
        // Lógica para cargar la información del rol en el modal de eliminación
        $(document).on('click', '[data-bs-target="#deleteModal"]', function () {
            var roleId = $(this).data('id'); // Obtener el ID del rol
            var roleName = $(this).data('name'); // Obtener el nombre del rol

            // Mostrar el nombre del rol en el modal
            $('#roleName').text(roleName);

            // Configurar la acción del formulario para eliminar el rol
            var actionUrl = '@Url.Action("Delete", "Roles")' + '?id=' + roleId;
            $('#deleteForm').attr('action', actionUrl);
        });

        // Lógica para cambiar el estado de un rol usando AJAX
        $(document).on('click', '.changeState', function () {
            var button = $(this);
            var roleId = button.data('id');
            var currentState = button.data('estado');
            var newState = !currentState; // Cambiar el estado (activo <=> inactivo)

            // Hacer la llamada AJAX para actualizar el estado
            $.ajax({
                url: '@Url.Action("ActualizarEstado", "Roles")',
                type: 'POST',
                data: {
                    id: roleId,
                    estado: newState
                },
                success: function (response) {
                    // Actualizar el botón en la UI
                    button.data('estado', newState);
                    button.text(newState ? "Activo" : "Inactivo");
                    button.removeClass(newState ? "btn-secondary" : "btn-success");
                    button.addClass(newState ? "btn-success" : "btn-secondary");
                },
                error: function () {
                    alert("Error al cambiar el estado del rol.");
                }
            });
        });
    </script>
}
