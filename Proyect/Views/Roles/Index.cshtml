@model IEnumerable<Proyect.Models.Role>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="superdiv">
<h1 class="page-title">Roles</h1>

<p class="text-end">
    <a asp-action="Create" class="btn btn-custom"><i class="bi bi-plus-square"></i>Crear </a>
</p>

<table class="table table-striped table-hover" id="RolesTable">
    <thead>
        <tr>
            <th>Nombre del Rol</th>
            <th>Descripcion del Rol</th>
            <th>Operaciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreRol)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td class="action-icons">
                    <a asp-action="Edit" asp-route-id="@item.IdRol" class="btn btn-icon"><i class="bi bi-pencil-square"></i> </a>
                    <a asp-action="Details" asp-route-id="@item.IdRol" class="btn btn-icon"><i class="bi bi-info-lg"></i> </a>
                    <a asp-action="Delete" asp-route-id="@item.IdRol" class="btn btn-icon"><i class="bi bi-trash"></i> </a>
                </td>
            </tr>
        }
    </tbody>
</table>

    @section Scripts {
        <script>
            $(document).ready(function () {
                // Inicializa DataTables
                var table = $('#RolesTable').DataTable({
                    language: {
                        "sLengthMenu": "Mostrar _MENU_ entradas",
                        "sInfo": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                        "sSearch": "Buscar:",
                        "emptyTable": "NO HAY NINGUN ELEMENTO EN LA TABLA"
                    },
                    dom: '<"top"lfB>rt<"bottom"ip><"clear">', // Organiza los elementos de DataTables
                });

                // Agregar el botón Crear al lado del filtro
                let createButton = '<a asp-action="Create" class="btn btn-custom me-3" id="crearRolBtn"><i class="bi bi-plus-square"></i> Crear</a>';
                $('#RolesTable_filter').addClass('d-flex align-items-center justify-content-between'); // Ajusta la posición
                $('#RolesTable_filter').prepend(createButton); // Inserta el botón antes del buscador
            });
        </script>
}
</div>