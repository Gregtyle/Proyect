@model Proyect.Models.Role

@{
    ViewData["Title"] = "Crear Rol";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <h1 class="h3 mb-4 text-gray-800 text-center">Crear Nuevo Rol</h1>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Formulario para Crear Rol</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Nombre del Rol -->
                <div class="form-group">
                    <label asp-for="NombreRol" class="control-label">Nombre del Rol</label>
                    <input asp-for="NombreRol" class="form-control" placeholder="Ingrese el nombre del rol" />
                    <span asp-validation-for="NombreRol" class="text-danger"></span>
                </div>

                <!-- Descripción del Rol -->
                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label">Descripción del Rol</label>
                    <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción del rol" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <!-- Permisos disponibles (Checkboxes) -->
                <div class="form-group">
                    <label class="control-label">Permisos:</label>
                    <button type="button" class="btn btn-secondary mb-2" id="select-all-btn">Seleccionar todos</button>

                    <div class="permissions-container mt-3">
                        @foreach (var permiso in ViewData["Permisos"] as List<Proyect.Models.Permiso>)
                        {
                            <div class="form-check">
                                <input type="checkbox" class="form-check-input permiso-checkbox" name="selectedPermisos" value="@permiso.IdPermiso" />
                                <label class="form-check-label">@permiso.NombrePermiso</label>
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> Crear Rol
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm ml-3">
                        <i class="fas fa-arrow-left"></i> Volver a la lista
                    </a>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Función para seleccionar todos los permisos al hacer click en el botón "Seleccionar todos"
        document.getElementById('select-all-btn').addEventListener('click', function () {
            const checkboxes = document.querySelectorAll('.permiso-checkbox');
            checkboxes.forEach(checkbox => checkbox.checked = true);
        });
    </script>
}
