@model Proyect.Models.Role

@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="page-title">Crear Nuevo Rol</h1>

<div class="create-container">
    <div class="card">
        <div class="card-header text-white bg-primary">
            <h4>Nuevo Rol</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
            <!-- Nombre del Rol -->
            <div class="form-group">
                <label asp-for="NombreRol" class="control-label"></label>
                <input asp-for="NombreRol" class="form-control" placeholder="Ingrese el nombre del rol" />
                <span asp-validation-for="NombreRol" class="text-danger"></span>
            </div>

            <!-- Descripción del Rol -->
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" placeholder="Ingrese la descripción del rol"/>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>

            <!-- Permisos disponibles (Checkboxes) -->
            <div class="form-group">
                <label class="control-label">Permisos:</label>
                <button type="button" class="btn btn-secondary mb-2" id="select-all-btn">Seleccionar todos</button>
                @foreach (var permiso in ViewData["Permisos"] as List<Proyect.Models.Permiso>)
                {
                    <div class="form-check">
                        <input type="checkbox" class="form-check-input permiso-checkbox" name="selectedPermisos" value="@permiso.IdPermiso" />
                        <label class="form-check-label">@permiso.NombrePermiso</label>
                    </div>
                }
            </div>
        </form>
        <div class="form-group text-center">
            <input type="submit" value="Crear Rol" class="btn btn-primary btn-lg" />
        </div>
        <div class="card-footer text-center">
            <a asp-action="Index" class="btn btn-secondary btn-sm">Volver a la lista</a>
        </div>
    </div>
</div>
<div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById('select-all-btn').addEventListener('click', function () {
            const checkboxes = document.querySelectorAll('.permiso-checkbox');
            checkboxes.forEach(checkbox => checkbox.checked = true);
        });
    </script>
}

