@model Proyect.Models.Habitacione

@{
    ViewData["Title"] = "Eliminar Habitación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="delete-container">
    <h1 class="Tituloscentro">Eliminar Habitación</h1>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">
            @TempData["ErrorMessage"]
        </div>
    }
    <div class="card shadow mb-4">
        <div class="card-header text-white bg-danger">
            <h6 class="m-0 font-weight-bold text-white">Confirmación de Eliminación</h6>
        </div>
        <div class="card-body">
            <h5>¿Está seguro de que desea eliminar esta habitación?</h5>
            <p><strong>Nota:</strong> Esta acción no puede deshacerse.</p>

            <dl class="row">
                <dt class="col-sm-3">Nombre de la Habitación</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nombre)
                </dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Estado)
                </dd>

                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

                <dt class="col-sm-3">Precio</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Precio)
                </dd>

                <dt class="col-sm-3">Tipo de Habitación</dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.IdTipoHabitacionNavigation.Nombre)
                </dd>
            </dl>
        </div>

        <div class="card-footer text-center">
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="IdHabitacion" />
                <button type="submit" class="btn ov-btn-slide-left-red btn-sm">
                    <i class="bi bi-trash-fill"></i> Eliminar
                </button>
                <a asp-action="Index" class="btn ov-btn-slide-left-gray btn-sm">
                    <i class="fas fa-arrow-left"></i> Volver a la lista
                </a>
            </form>
        </div>
    </div>
</div>
